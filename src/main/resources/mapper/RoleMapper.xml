<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyh.authorityManagement.mapper.RoleMapper">

    <!--新增角色-->
    <insert id="insertRole" parameterType="role">
        INSERT INTO role VALUES (0,#{name})
    </insert>

    <!-- 新增角色权限菜单关系 -->
    <insert id="insertRoleMenu">
        INSERT INTO role_menu VALUES (#{menuId},#{roleId})
    </insert>

    <!--根据id更新角色-->
    <update id="updateRole" parameterType="role">
        UPDATE role
        SET name=#{name}
        WHERE
         id=#{id}
    </update>

    <!--删除角色-->
    <delete id="deleteRoleById">
        DELETE FROM WHERE id =#{id}
    </delete>
    <!--根据roleuuid删除拥有的角色信息-->
    <delete id="deleteMenuIdByRoleId">
        DELETE FROM role
        WHERE id=#{id}
    </delete>

    <!--查询-->
    <!--查询所有角色role，使用name模糊查询、enable精准查询-->
    <select id="selectRoleListByPage" resultType="com.xyh.authorityManagement.pojo.Role">
        SELECT id,name
        FROM role
        <if test="name!=null">
            WHERE
            <if test="name!=null">
                name LIKE CONCAT('%',#{name},'%')
            </if>
        </if>
    </select>
    <!--根据角色模糊查询角色 自动补全-->
    <select id="selectRoleName" resultType="com.xyh.authorityManagement.pojo.Role" parameterType="string">
        SELECT name
        FROM role
        WHERE
        name LIKE CONCAT('%',#{name},'%')
    </select>
    <!--查询所有的角色-->
    <select id="selectRoleList" resultType="com.xyh.authorityManagement.pojo.Role">
        SELECT
            id,name
        FROM
            role
    </select>
    <!--根据角色id获取角色对应的菜单id-->
    <select id="selectRoleMenuIdByRoleId" resultType="java.lang.String">
        SELECT
         role_menu.menuId
         FROM
         role_menu
         WHERE
         role_menu.rolrId=#{roleId}
    </select>
    <!--根据角色id获取对应的用户id -->
    <select id="selectUserIdByRoleId" resultType="java.lang.Integer">
        SELECT
            userId
        FROM
            user_role
        WHERE
            roleId=#{roleId}
    </select>
</mapper>